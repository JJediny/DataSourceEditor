{
  "title": "CSV file",
  "description": "A comma-separated value file to be loaded as either points or mapped to regions.",
  "type": "object",
  "allOf": [
    {
      "$ref": "catalogItem.json"
    }
  ],
  "defaultProperties": [
    "name",
    "type",
    "url",
    "tableStyle"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "csv"
      ]
    },
    "tableStyle": {
      "type": "object",
      "properties": {
        "scale": {
          "type": "number"
        },
        "scaleByValue": {
          "type": "boolean",
          "format": "checkbox"
        },
        "colorMap": {
          "type": "array",
          "format": "table",
          "options": {
            "collapsed": true
          },
          "items": [
            {
              "required": [
                "color",
                "offset"
              ],
              "type": "object",
              "properties": {
                "color": {
                  "type": "string"
                },
                "offset": {
                  "type": "number"
                }
              }
            }
          ]
        },
        "displayTime": {
          "type": "integer"
        },
        "maxDisplayValue": {
          "type": "integer"
        },
        "imageUrl": {
          "type": "string"
        },
        "regionType": {
          "type": "string"
        },
        "minDisplayValue": {
          "type": "integer"
        },
        "dataVariable": {
          "type": "string"
        },
        "regionVariable": {
          "type": "string"
        }
      }
    }
  }
}
