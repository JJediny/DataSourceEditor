{
  "title": "CSV file",
  "description": "A comma-separated value file to be loaded as either points or mapped to regions.",
  "type": "object",
  "allOf": [
    {
      "$ref": "CatalogItem.json"
    }
  ],
  "defaultProperties": [
    "name",
    "type",
    "url",
    "tableStyle"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "csv"
      ]
    },
    "tableStyle": {
      "type": "object",
      "title": "Table styling",
      "properties": {
        "scale": {
          "type": "number"
        },
        "scaleByValue": {
          "title": "Scale by value",
          "type": "boolean",
          "format": "checkbox"
        },
        "colorMap": {
          "title": "Color mappings",
          "type": "array",
          "format": "table",
          "options": {
            "collapsed": true
          },
          "items": {
            "title": "Color mapping",
            "type": "object",
            "properties": {
              "color": {
                "title": "Color"
              },
              "offset": {
                "type": "number"
              }
            }
          }
        },
        "displayTime": {
          "title": "Display time",
          "type": "integer"
        },
        "displayDuration": {
          "title": "Display duration",
          "type": "integer"
        },
        "maxDisplayValue": {
          "title": "Maximum display value",
          "type": "integer"
        },
        "imageUrl": {
          "title": "Image URL",
          "type": "string"
        },
        "regionType": {
          "title": "Region type",
          "type": "string"
        },
        "minDisplayValue": {
          "title": "Minimum display value",
          "type": "integer"
        },
        "dataVariable": {
          "title": "Data variable",
          "type": "string"
        },
        "regionVariable": {
          "title": "Region variable",
          "type": "string"
        },
        "legendTicks": {
          "title": "Legend ticks"
        }
      }
    },
    "keepOnTop": {
      "title": "Keep on top",
      "description": "Keeps the layer on top of all other imagery layers.",
      "type": "boolean",
      "format": "checkbox"
    }
  }
}
